= form_for @teams_project, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :team_id, :class => 'control-label'
    .controls
      = f.collection_select :team_id, Team.all, :id, :name, :class => 'text_field'
  .control-group
    = f.label :project_id, :class => 'control-label'
    .controls
      = f.collection_select :project_id, Project.all, :id, :name, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), teams_projects_path, :class => 'btn'
