- model_class = TeamsProject
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:team_id)
      %th= model_class.human_attribute_name(:project_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @teams_projects.each do |teams_project|
      %tr
        %td= link_to teams_project.id, teams_project_path(teams_project)
        %td= link_to Team.find(teams_project.team_id).name, team_path(teams_project.team_id)
        %td= link_to Project.find(teams_project.project_id), project_path(teams_project.project_id)
        %td=l teams_project.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_teams_project_path(teams_project), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), teams_project_path(teams_project), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_teams_project_path, :class => 'btn btn-primary'
