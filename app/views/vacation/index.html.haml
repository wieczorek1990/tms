- model_class = Vacation
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:start_date)
      %th= model_class.human_attribute_name(:end_date)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @vacations.each do |vacation|
      %tr
        %td= link_to vacation.id, vacation_path(vacation)
        %td= vacation.start_date
        %td= vacation.end_date
        %td= vacation.user_id
        %td=l vacation.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_vacation_path(vacation), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), vacation_path(vacation), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_vacation_path, :class => 'btn btn-primary'
