- model_class = Vacation
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:start_date) + ':'
  %br
  = @vacation.start_date
%p
  %strong= model_class.human_attribute_name(:end_date) + ':'
  %br
  = @vacation.end_date
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @vacation.user_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), vacation_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_vacation_path(@vacation), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), vacation_path(@vacation), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
