- model_class = ContactPerson
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:email) + ':'
  %br
  = mail_to @contact_person.email
%p
  %strong= model_class.human_attribute_name(:first_name) + ':'
  %br
  = @contact_person.first_name
%p
  %strong= model_class.human_attribute_name(:last_name) + ':'
  %br
  = @contact_person.last_name
%p
  %strong= model_class.human_attribute_name(:phone) + ':'
  %br
  = @contact_person.phone

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), contact_people_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_contact_person_path(@contact_person), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), contact_person_path(@contact_person), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
