- model_class = ContactPerson
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:email)
      %th= model_class.human_attribute_name(:first_name)
      %th= model_class.human_attribute_name(:last_name)
      %th= model_class.human_attribute_name(:phone)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @contact_people.each do |contact_person|
      %tr
        %td= link_to contact_person.id, contact_person_path(contact_person)
        %td= mail_to contact_person.email
        %td= contact_person.first_name
        %td= contact_person.last_name
        %td= contact_person.phone
        %td=l contact_person.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_contact_person_path(contact_person), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), contact_person_path(contact_person), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_contact_person_path, :class => 'btn btn-primary'
