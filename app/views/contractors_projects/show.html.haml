- model_class = ContractorsProject
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:contractor_id) + ':'
  %br
  = link_to Contractor.find(@contractors_project.contractor_id).name, contractor_path(@contractors_project.contractor_id)
%p
  %strong= model_class.human_attribute_name(:project_id) + ':'
  %br
  = link_to Project.find(@contractors_project.project_id).name, project_path(@contractors_project.project_id)

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), contractors_projects_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_contractors_project_path(@contractors_project), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), contractors_project_path(@contractors_project), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
