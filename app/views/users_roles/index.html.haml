- model_class = UsersRole
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:role_id)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @users_roles.each do |users_role|
      %tr
        %td= users_role.user_id
        %td= users_role.role_id
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_users_role_path(users_role), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), users_role_path(users_role), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_users_role_path, :class => 'btn btn-primary'
