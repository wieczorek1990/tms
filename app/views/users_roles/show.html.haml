- model_class = UsersRole
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @users_role.user_id
%p
  %strong= model_class.human_attribute_name(:role_id) + ':'
  %br
  = @users_role.role_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), users_roles_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_users_role_path(@users_role), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), users_role_path(@users_role), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
