= form_for @users_role, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :user_id, :class => 'control-label'
    .controls
      = f.collection_select :user_id, User.all, :id, :email, :class => 'text_field'
  .control-group
    = f.label :role_id, :class => 'control-label'
    .controls
      = f.collection_select :role_id, Role.all, :id, :name, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), users_roles_path, :class => 'btn'
