= form_for @role, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :resource_id, :class => 'control-label'
    .controls
      = f.text_field :resource_id, :class => 'text_field'
  .control-group
    = f.label :resource_type, :class => 'control-label'
    .controls
      = f.text_field :resource_type, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), roles_path, :class => 'btn'
