= form_for @task, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :person_responsible_id, :class => 'control-label'
    .controls
      = f.collection_select :person_responsible_id, User.all, :id, :email, :class => 'text_field'
  .control-group
    = f.label :work_category_id, :class => 'control-label'
    .controls
      = f.collection_select :work_category_id, WorkCategory.all, :id, :name, :class => 'text_field'
  .control-group
    = f.label :start_date, :class => 'control-label'
    .controls
      = f.text_field :start_date, :class => 'text_field', 'data-behaviour' => 'datepicker'
  .control-group
    = f.label :end_date, :class => 'control-label'
    .controls
      = f.text_field :end_date, :class => 'text_field', 'data-behaviour' => 'datepicker'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_area :description, :class => 'text_field'
  .control-group
    = f.label :hours_planned, :class => 'control-label'
    .controls
      = f.text_field :hours_planned, :class => 'text_field'
  .control-group
    = f.label :hours_real, :class => 'control-label'
    .controls
      = f.text_field :hours_real, :class => 'text_field'
  .control-group
    = f.label :cost, :class => 'control-label'
    .controls
      = f.text_field :cost, :class => 'text_field'
  .control-group
    = f.label :status_id, :class => 'control-label'
    .controls
      = f.collection_select :status_id, Status.all, :id, :name, :class => 'text_field'
  .control-group
    = f.label :project_id, :class => 'control-label'
    .controls
      = f.collection_select :project_id, Project.all, :id, :name, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), tasks_path, :class => 'btn'
