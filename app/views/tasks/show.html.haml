- model_class = Task
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:person_responsible_id) + ':'
  %br
  = User.find(@task.person_responsible_id).email
%p
  %strong= model_class.human_attribute_name(:work_category_id) + ':'
  %br
  = WorkCategory.find(@task.work_category_id).name
%p
  %strong= model_class.human_attribute_name(:start_date) + ':'
  %br
  = @task.start_date
%p
  %strong= model_class.human_attribute_name(:end_date) + ':'
  %br
  = @task.end_date
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @task.description
%p
  %strong= model_class.human_attribute_name(:hours_planned) + ':'
  %br
  = @task.hours_planned
%p
  %strong= model_class.human_attribute_name(:hours_real) + ':'
  %br
  = @task.hours_real
%p
  %strong= model_class.human_attribute_name(:cost) + ':'
  %br
  = @task.cost
%p
  %strong= model_class.human_attribute_name(:status_id) + ':'
  %br
  = Status.find(@task.status_id).name
%p
  %strong= model_class.human_attribute_name(:project_id) + ':'
  %br
  = link_to Project.find(@task.project_id).name, project_path(@task.project_id)

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), tasks_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_task_path(@task), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), task_path(@task), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
