- model_class = FreePeriod
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:start_date) + ':'
  %br
  = @free_period.start_date
%p
  %strong= model_class.human_attribute_name(:end_date) + ':'
  %br
  = @free_period.end_date
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = mail_to User.find(@free_period.user_id).email
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @free_period.description

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), free_periods_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_free_period_path(@free_period), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), free_period_path(@free_period), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
