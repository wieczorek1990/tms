= form_for @free_period, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :start_date, :class => 'control-label'
    .controls
      = f.text_field :start_date, :class => 'text_field'
  .control-group
    = f.label :end_date, :class => 'control-label'
    .controls
      = f.text_field :end_date, :class => 'text_field'
  .control-group
    = f.label :user_id, :class => 'control-label'
    .controls
      = f.text_field :user_id, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), free_periods_path, :class => 'btn'
