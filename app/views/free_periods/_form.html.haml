= form_for @free_period, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :start_date, :class => 'control-label'
    .controls
      = f.date_select :start_date, :class => 'text_field'
  .control-group
    = f.label :end_date, :class => 'control-label'
    .controls
      = f.date_select :end_date, :class => 'text_field'
  .control-group
    = f.label :user_id, :class => 'control-label'
    .controls
      = f.collection_select :user_id, User.all, :id, :email, :prompt => true, :class => 'text_field'
  .control-group
    = f.label :description, :class => 'control-label'
    .controls
      = f.text_field :description, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), free_periods_path, :class => 'btn'
