- model_class = Holiday
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:date)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @holidays.each do |holiday|
      %tr
        %td= link_to holiday.id, holiday_path(holiday)
        %td= holiday.date
        %td= holiday.name
        %td=l holiday.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_holiday_path(holiday), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), holiday_path(holiday), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_holiday_path, :class => 'btn btn-primary'
