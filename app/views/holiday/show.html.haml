- model_class = Holiday
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:date) + ':'
  %br
  = @holiday.date
%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @holiday.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), holiday_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_holiday_path(@holiday), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), holiday_path(@holiday), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
