- model_class = DepartmentsUser
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:department_id) + ':'
  %br
  = @departments_user.department_id
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @departments_user.user_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), departments_users_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_departments_user_path(@departments_user), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), departments_user_path(@departments_user), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
