= form_for @departments_user, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :department_id, :class => 'control-label'
    .controls
      = f.collection_select :department_id, Department.all, :id, :name, :class => 'text_field'
  .control-group
    = f.label :user_id, :class => 'control-label'
    .controls
      = f.collection_select :user_id, User.all, :id, :email, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), departments_users_path, :class => 'btn'
