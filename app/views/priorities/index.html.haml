- model_class = Priority
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @priorities.each do |priority|
      %tr
        %td= link_to priority.id, priority_path(priority)
        %td= priority.name
        %td=l priority.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_priority_path(priority), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), priority_path(priority), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_priority_path, :class => 'btn btn-primary'
