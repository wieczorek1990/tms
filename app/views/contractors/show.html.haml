- model_class = Contractor
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @contractor.name

%p
  %strong= model_class.human_attribute_name(:contact_person_id) + ':'
  %br
  = link_to ContactPerson.find(@contractor.contact_person_id).email, contact_person_path(@contractor.contact_person)

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), contractors_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_contractor_path(@contractor), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), contractor_path(@contractor), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
