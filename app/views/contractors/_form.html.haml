= form_for @contractor, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :name, :class => 'control-label'
    .controls
      = f.text_field :name, :class => 'text_field'
  .control-group
    = f.label :contact_person_id, :class => 'control-label'
    .controls
      = f.collection_select :contact_person_id, ContactPerson.all, :id, :email, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), contractors_path, :class => 'btn'
