- model_class = WorkCategory
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @work_category.name

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), work_categories_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_work_category_path(@work_category), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), work_category_path(@work_category), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
