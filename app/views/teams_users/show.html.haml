- model_class = TeamsUser
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:team_id) + ':'
  %br
  = link_to Team.find(@teams_user.team_id).name, team_path(@teams_user.team_id)
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = mail_to User.find(@teams_user.user_id).email

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), teams_users_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_teams_user_path(@teams_user), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), teams_user_path(@teams_user), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
